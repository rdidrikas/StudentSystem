<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane alignment="CENTER" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rdid.studentssys.controller.HomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <AnchorPane fx:id="mainContent" prefHeight="429.0" prefWidth="715.0">
         <children>
            <VBox fx:id="sidebar" alignment="TOP_LEFT" layoutX="12.0" layoutY="56.0" managed="false" prefHeight="168.0" prefWidth="123.0" visible="false">
                  <padding>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
                  <children>
                     <Button fx:id="studentsButton" onAction="#toggleStudentsMenu" text="Students" />
                     <VBox fx:id="subStudentsSidebar" managed="false" prefWidth="125" visible="false">
                        <padding>
                            <Insets left="20.0" />
                        </padding>
                        <children>
                           <Button minWidth="150" onAction="#handleAddStudentButton" text="Add Student" />
                           <Button minWidth="150" onAction="#handleViewStudentButton" text="View Students" />
                           <Button minWidth="150" onAction="#handleEditStudentsButton" text="Edit Students" />
                        </children>
                     </VBox>
                     <Button onAction="#toggleGroupsMenu" text="Groups" />
                     <VBox fx:id="subGroupsSidebar" managed="false" visible="false">
                        <padding>
                           <Insets left="20.0" />
                        </padding>
                        <children>
                           <Button minWidth="150" onAction="#handleAddGroupButton" text="Add Groups" />
                           <Button minWidth="150" onAction="#handleViewGroupsButton" text="View Groups" />
                           <Button minWidth="150" onAction="#handleEditGroupsButton" text="Edit Groups" />
                        </children>
                     </VBox>
                      <Button onAction="#toggleImportMenu" text="Import Data" />
                      <VBox fx:id="subImportSidebar" managed="false" visible="false">
                        <padding>
                            <Insets left="20.0" />
                        </padding>
                        <children>
                           <Button minWidth="150" onAction="#toggleImportCSVMenu" text="Import with CSV" />
                            <VBox fx:id="subImportCSVSidebar" managed="false" visible="false">
                                <padding>
                                    <Insets left="20.0" />
                                </padding>
                                <children>
                                     <Button minWidth="150" onAction="#handleImportCSVStudents" text="Import Students" fx:id="importCSVStudentsButton"/>
                                    <Button minWidth="150" onAction="#handleImportCSVGroups" text="Import Groups" />
                                </children>
                            </VBox>
                           <Button minWidth="150" onAction="#toggleImportExcelMenu" text="Import with Excel" />
                            <VBox fx:id="subImportExcelSidebar" managed="false" visible="false">
                                <padding>
                                    <Insets left="20.0" />
                                </padding>
                                <children>
                                    <Button minWidth="150" onAction="#handleImportExcelStudents" text="Import Students" />
                                    <Button minWidth="150" onAction="#handleImportExcelGroups" text="Export Groups" />
                                </children>
                            </VBox>
                        </children>
                      </VBox>
                      <Button onAction="#toggleExportMenu" text="Export Data" />
                      <VBox fx:id="subExportSidebar" managed="false" visible="false">
                          <padding>
                              <Insets left="20.0" />
                          </padding>
                          <children>
                              <Button minWidth="150" onAction="#toggleExportCSVMenu" text="Export with CSV" />
                              <VBox fx:id="subExportCSVSidebar" managed="false" visible="false">
                                  <padding>
                                      <Insets left="20.0" />
                                  </padding>
                                  <children>
                                      <Button minWidth="150" onAction="#handleExportCSVStudents" text="Export Students" />
                                      <Button minWidth="150" onAction="#handleExportCSVGroups" text="Export Groups" />
                                  </children>
                              </VBox>
                              <Button minWidth="150" onAction="#toggleExportExcelMenu" text="Export with Excel" />
                              <VBox fx:id="subExportExcelSidebar" managed="false" visible="false">
                                  <padding>
                                      <Insets left="20.0" />
                                  </padding>
                                  <children>
                                      <Button minWidth="150" onAction="#handleExportExcelStudents" text="Export Students" />
                                      <Button minWidth="150" onAction="#handleExportExcelGroups" text="Export Groups" />
                                  </children>
                              </VBox>
                          </children>
                      </VBox>

                  </children>
            </VBox>
            <Button layoutX="20.0" layoutY="25.0" onAction="#toggleMenu" text="â˜°" />
            <Label fx:id="HomeName" layoutX="76.0" layoutY="28.0" style="-fx-font-size: 18px;" text="Student Attendance System" />
         </children>
      </AnchorPane>
   </children>
    
</StackPane>
